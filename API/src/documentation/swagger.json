{
  "openapi": "3.0.0",
  "info": {
    "title": "API customers",
    "contact": { "email": "jp.dellabianca@gmail.com" },
    "version": "1.0.0"
  },
  "paths": {
    "/client": {
      "post": {
        "summary": "Create new user",
        "tags": ["User"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              },
              "examples": {
                "client": {
                  "value": {
                    "name": "João",
                    "email": "jp.dellabianca@gmail.com",
                    "password": "1234"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "created user"
          },
          "400": {
            "description": "Client Already Exists | Element null | Invalid length"
          }
        }
      },
      "patch": {
        "summary": "Patch a costumer",
        "description": "Update the name of a costumer",
        "tags": ["Clients"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": { "type": "string" },
                  "cnpj": { "type": "string" }
                }
              },
              "examples": {
                "client": {
                  "value": {
                    "name": "João Atualizado",
                    "cnpj": "662467259311225"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "OK"
          },
          "400": {
            "description": "unexpected error"
          }
        }
      },
      "get": {
        "summary": "Get customers",
        "description": "Returns all customers",
        "tags": ["Clients"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "query",
            "name": "cnpj",
            "description": "cnpj to filter by",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Client"
              }
            }
          },
          "400": {
            "description": "unexpected error"
          }
        }
      },
      "delete": {
        "sumary": "delete customer",
        "description": "deletes a single customer based on the cnpj supplied",
        "tags": ["Clients"],
        "parameters": [
          {
            "name": "cnpj",
            "in": "query",
            "description": "cnpj of the customer to delete",
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "customer deleted"
          },
          "default": {
            "description": "unexpected error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Client": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "cnpj": { "type": "string" },
          "corporate_name": { "type": "string" },
          "phone": { "type": "string" }
        }
      },
      "Address": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "cep": { "type": "string" },
          "city": { "type": "string" },
          "district": { "type": "string" },
          "number": { "type": "string" },
          "state": { "type": "string" },
          "option": { "type": "string" },
          "longitude": { "type": "string" },
          "latitude": { "type": "string" }
        }
      }
    }
  }
}
